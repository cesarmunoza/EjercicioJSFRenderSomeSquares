<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <managed-bean>
        <description>El unico y elegido HelloBean</description>
        <managed-bean-name>helloBean</managed-bean-name>
        <managed-bean-class>org.jia.hello.HelloBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    <navigation-rule>
        <description>Navegaci√≥n desde pagina inicial de hello</description>
        <from-view-id>/hello.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>Exitooo</from-outcome>
            <to-view-id>goodbye.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

</faces-config>
